<div class="p-3 form-booking-control">
  <h5 class='border-bottom pb-3'>Add dates to display price</h5>

  <div class="booking-form">
    <%= simple_form_for([@kitchen, @booking], data: {price: "#{@kitchen.price}"}) do |f| %>
      <%= f.input :start_date, placeholder: "Date of arrival...", label: "From:", as: :string, required: false, input_html: {id: "start_date"} %>
      <%= f.input :end_date, placeholder: "Date of departure...", label: "To:", as: :string, required: false, input_html: {id: "end_date"}  %>
    <div id="booking-price-result">

    </div>
      <%= f.submit "Book me!", class: 'btn btn-lior book-btn my-1' %>
    <% end %>
  </div>

  <div class="pr-3 mt-3">
    <p class="border-top pt-3" id="kitchen-attention">This kitchen attracts a lot of attention!</p>
    <p id="fake-news">This post has been viewed more than 500 times during this week</p>
  </div>

  <%= cl_image_tag 'https://a0.muscache.com/airbnb/static/packages/icon-uc-light-bulb.1ffc0407.gif', class: "la-tuerie" %>
</div>

